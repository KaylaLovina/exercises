  <p id="demo"></p>

  <p id="tulisan">Tulisan ini tidak akan berubah</p>

  <script>
    document.getElementById("demo").innerHTML = "<h2>Meow</h2>";
  </script>

  <button onclick="document.getElementById('demo').innerHTML = '<h2>Gabisa</h2>'">masa sih</button>
  <button onclick="document.getElementById('demo').innerHTML = '<h2>Gabisa juga wleeee</h2>'">coba lagi</button>

  <button onclick="document.getElementById('tulisan').innerHTML = '<p>Hihihi bisa ternyata</p>'">last button nih</button>
  
